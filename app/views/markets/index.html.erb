<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

   
<body>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
			<h1>Markets we are currently tracking</h1>

				<table class = "table-striped">
					<thead>
						<tr>
							
						</tr>
					</thead>

					<tbody>
						<% @markets.each do |m| %>
						<tr>
							<td><%= m.market_name %></td><br />
							<td><%= m.address %></td>
							<%link_to 'Show Market', m %><br>
						</tr>
						<% end %>
					</tbody>
				</table>
				<br>

			<%= link_to 'Add A New Market', new_market_path %>
    </div>
   
    <div class="col-md-9">
      <h1></h1>
      <div id="map-canvas"></div>
    </div>
  </div>
</div>

<script type="text/javascript">

  handler = Gmaps.build('Google');
<% @markets.each do |m| %>


  handler.buildMap({ provider: {zoom: 2, provider_key: "AIzaSyBnugBXbtHJ6qqIyILKqKPQ1l2rafKtjx0"}, internal: {id: 'map-canvas'}}, function(){
    markers = handler.addMarkers([
      {
        lat: <%=m.coordinates[0]%>, // pulls in the latitude for the marker via ERB
        lng: <%=m.coordinates[1]%> // pulls in the longitude for the marker via ERB
      }
    ]);

  });
<% end %>

</script>
</body>

